@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>
    <!-- Bootstrap -->
    <!-- Bootstrap DatePicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <!-- Bootstrap DatePicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/Scripts/GeneratePDF.js"></script>

    <script>

          $(function () {
         $('[id*=txtDOB]').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "yyyy-mm-dd",
            language: "tr"
          });
         });

        $(document).ready(function () {
            $('.DataTable').hide();
             $('#Passport').hide();
             $('#NationalId').hide();
             $('#SubmitTable').hide();
        });
          $("#documentype").change(function () {

            $('#txtEmiratesId').val('');
            $('#txtPassportNo').val('');
            $('#txtDoB').val('');
            $('#Nationalitytype').val("-1");


            var val = $("#documentype option:selected").val();

            if (val == '-1') {
                 $('#Passport').hide();
                 $('#NationalId').hide();
                 $(".tbody").empty();
                 $('#SubmitTable').hide();
            }
            else if (val == '2')
                {
                $('#Passport').hide();
                $('#NationalId').show();
                $('#SubmitTable').show();
            }
            else if (val == '3')
            {
                $('#Passport').show();
             $('#NationalId').hide();
                 $('#SubmitTable').show();
            }

        });

        function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');
            var id = $("#documentype option:selected").val();
            var url = '@Url.Action("Search","MOHRECompany")';

            $(".tbody").empty();
            $(".tbody1").empty();
            $(".tbody2").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
            var html = '';
             var html1 = '';
             var html2 = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if (id == 2 && $("#txtEmiratesId").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid EmiratesId');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
            }
            else if (id == 3 && $("#txtPassportNo").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid passport number');
                document.getElementById('error').style.color = 'white';

                $("#txtPassportNo").focus();


                $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

            var input = { "EmiratesId": $('#txtEmiratesId').val(), "PassportNo": $('#txtPassportNo').val(), "DOB": $('#txtDOB').val() };
            var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { index: id, postdata: JSON.stringify(input) , UserAgent: JSON.stringify(UsrAgent)}, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1") {

                    for (var i = 0; i < obj.lstMOHREResponse.length; i++) {
                        html += '<tr>';
                         html += '<td>' + obj.lstMOHREResponse[i].ownerNameArabic + '</td>';
                         html += '<td>' +  obj.lstMOHREResponse[i].ownerNameEnglish + '</td>';
                         html += '</tr>';
                         if(obj.lstMOHREResponse[i].NationalCompanyList != null)
                        for (var j = 0; j < obj.lstMOHREResponse[i].NationalCompanyList.length; j++) {
                            html1 += '<tr>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].CompanyLicenseNumber + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].LabourOfficeEng + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].LabourOfficeArb + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].CompanyNameEnglish + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].CompanyNameArabic + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].CompanyCode + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].LicenseStartDate + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].LicenseExpiryDate + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].TotalEmployee + '</td>';
                            html1 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].ComStatus + '</td>';

                            html1 += '</tr>';
                            if(obj.lstMOHREResponse[i].NationalCompanyList[j].ActivitiesList != null)
                            for (var k = 0; k < obj.lstMOHREResponse[i].NationalCompanyList[j].ActivitiesList.length; k++) {
                                html2 += '<tr>';
                                html2+= '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].ActivitiesList[k].englishName + '</td>';
                                html2 += '<td>' + obj.lstMOHREResponse[i].NationalCompanyList[j].ActivitiesList[k].arabicName + '</td>';
                                html2 += '</tr>';

                            }

                        }
                    }


                    $(".tbody").append(html);
                    $(".tbody1").append(html1);
                    $(".tbody2").append(html2);
                    $('.DataTable').show();
                }
                 else {

                    if (obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

       $("#btnsubmit").on("click", getData);

        $('#create_pdf').on('click', function () {
            getPDF("MoHRECompany.pdf");
       });
    </script>
}

