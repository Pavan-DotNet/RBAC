

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOCD Integrations | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body dir="rtl">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li><p class="nav navbar-text navbar-right">مرحبا, @User.Identity.Name</p></li>
                    <li>@Html.ActionLink("تسجيل الخروج", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("إدارة الأدوار", "Index", "Role", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("إدارة الصلاحيات", "Index", "Permission", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("إدارة المستخدمين", "Index", "User", null, new { @class = "nav-link" })</li>
                    }
                }
                else
                {
                    <li>@Html.ActionLink("تسجيل الدخول", "Login", "Account", null, new { @class = "nav-link" })</li>
                }
            </ul>
        </div>

        @Html.ActionLink("الرئيسية", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
        <a href="#">
            <img src="~/Images/logo.png" style="height:60px;width:300px" />
        </a>

    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div>
        <footer style="display:table;text-align: center;margin-left: auto;margin-right: auto;">
            <p>
                <b>
                    &copy; @DateTime.Now.Year -  وزارة تنمية المجتمع
                </b>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/maskedtextbox.js"></script>
</body>
</html>


