@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "وزارة الاقتصاد - رخصة تجارية";
}

<br />
<div class="canvas_div_pdf">
    <div style="text-align:center" class="table table-bordered table-active"> <h4><small><b>وزارة الاقتصاد - رخصة تجارية</b></small></h4></div>
    <div dir="rtl" class="table-responsive table-condensed text-center ">

        <table class="table table-bordered table-active">
            <tr>
                <td><h6><small><b> نوع المستند</b></small></h6></td>
                <td colspan="3" align="center">
                    <select id="documentype" class="dropdown dropdown-header form-control">
                        <option value="-1">-- اختر --</option>
                        <option value="2">بطاقة هوية</option>
                        <option value="3">جواز سفر</option>
                    </select>
                </td>

            </tr>
        </table>
        <table id="NationalId" class="table table-bordered table-active">
            <tr>
                <td><h6><small><b> بطاقة هوية </b></small></h6></td>
                <td colspan="3"> <input id="txtEmiratesId" type="text" class="form-control" style="width:100%" /></td>

            </tr>
        </table>
        <table id="Passport" class="table table-bordered table-active">
            <tr>
                <td><h6><small><b> جواز سفر </b></small></h6></td>
                <td> <input id="txtPassportNo" type="text" class="form-control" style="width:100%" /></td>

            </tr>
        </table>
        <table id="SubmitTable" class="table">
            <tr>
                <td colspan="4">
                    <input class="btn btn-secondary active text-center" type="submit" id="btnsubmit" value="الحصول على البيانات" />
                    <img id="create_pdf" src="~/Images/PDF.png" alt="pdf" style="height:50px;width:80px;float:left " />

                </td>

            </tr>
        </table>
        <div id="error" class="bg-danger"></div>
        <br />
        <div id="divLoading">
        </div>
        <table class="DataTable table table-bordered  table-hover text-center table-active">
            <tr>
                <td>
                    <h4>
                        بيانات المالك
                    </h4>
                    <br />
                    <table>
                        <thead class="">
                            <tr>
                                <th class="text-center"> <h6><small><b>الهوية الإماراتية للمالك</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>اسم المالك بالعربية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>اسم المالك بالإنجليزية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>جواز المالك</b></small></h6></th>
                            </tr>

                        </thead>
                        <tbody class="tbody text-center" id="tbody"></tbody>
                    </table>
                    <br />
                    <h4>
                        رخصة المشروع
                    </h4>
                    <br />
                    <table>
                        <thead class="">
                            <tr>
                                <th class="text-center"> <h6><small><b>رقم الرخصة </b></small></h6></th>
                                <th class="text-center"> <h6><small><b>اسم المشروع بالعربية </b></small></h6></th>
                                <th class="text-center"> <h6><small><b>اسم المشروع بالإنجليزية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>القسم الاقتصادي بالعربية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>القسم الاقتصادي بالإنجليزية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>الإمارة بالعربية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>الإمارة بالإنجليزية</b></small></h6></th>
                            </tr>

                        </thead>
                        <tbody class="tbody1 text-center" id="tbody1"></tbody>
                    </table>
                    <br />
                    <table>
                        <thead class="">
                            <tr>
                                <th class="text-center"> <h6><small><b>تاريخ تسجيل الرخصة</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>تاريخ انتهاء الرخصة</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>حالة الرخصة بالعربية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>حالة الرخصة بالإنجليزية</b></small></h6></th>
                                <th class="text-center"> <h6><small><b>الرقم المرجعي للرخصة</b></small></h6></th>
                            </tr>

                        </thead>
                        <tbody class="tbody2 text-center" id="tbody2"></tbody>
                    </table>
                    <br />
                    <h4>
                        شراكة المالك
                    </h4>
                    <br />
                    <table>
                        <thead class="">
                            <tr>
                                <th class="text-center"> <h6><small><b>نوع شراكة المالك بالعربية </b></small></h6></th>
                                <th class="text-center"> <h6><small><b>نوع شراكة المالك بالإنجليزية </b></small></h6></th>
                                <th class="text-center"> <h6><small><b>نسبة شراكة المالك</b></small></h6></th>
                            </tr>
                        </thead>
                        <tbody class="tbody3 text-center" id="tbody3"></tbody>
                    </table>
                </td>
            </tr>
        </table>
        <div id="response" class="bg-danger"></div>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/Scripts/GeneratePDF.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>

    <script>



       $(document).ready(function () {

            $('.DataTable').hide();
             $('#Passport').hide();
             $('#NationalId').hide();
             $('#SubmitTable').hide();

        });

        $("#documentype").change(function () {

            $('#txtEmiratesId').val('');
            $('#txtPassportNo').val('');


            var val = $("#documentype option:selected").val();

            if (val == '-1') {
                $('#Passport').hide();
                $('#NationalId').hide();
                $(".tbody").empty();
                 $('#SubmitTable').hide();
            }
            else if (val == '2')
                {
                $('#Passport').hide();
             $('#NationalId').show();
                $('#SubmitTable').show();
            }
            else if (val == '3')
            {
                $('#Passport').show();
             $('#NationalId').hide();
                 $('#SubmitTable').show();
            }

        });

        function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","MoEc")';
            var id = $("#documentype option:selected").val();
            $(".tbody").empty();
            $(".tbody1").empty();
            $(".tbody2").empty();
             $(".tbody3").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
            var html = '';
            var html1 = '';
            var html2 = '';
             var html3 = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if (id == 2 && $("#txtEmiratesId").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid EmiratesId');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
            }
            else if (id == 3 && $("#txtPassportNo").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid passport number');
                document.getElementById('error').style.color = 'white';

                $("#txtPassportNo").focus();


                $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

            var input = { "EmiratesID": $('#txtEmiratesId').val(), "Passport": $('#txtPassportNo').val() };
            var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { index: id, postdata: JSON.stringify(input), UserAgent: JSON.stringify(UsrAgent) }, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1") {


                    $.each(obj.objResponseParams.lstOwnerDetails, function (key, item) {

                        html += '<tr>';
                        html += '<td>' + item.OwnerEmiratesID + '</td>';
                        html += '<td>' + item.OwnerNameAR + '</td>';
                        html += '<td>' + item.OwnerNameEN + '</td>';
                        html += '<td>' + item.OwnerPassport + '</td>';
                        html += '</tr>';

                    });

                    $.each(obj.objResponseParams.lstBusinessLicenses, function (key, item) {

                        html1 += '<tr>';
                        html1 += '<td>' + item.LicenseNumber + '</td>';
                        html1 += '<td>' + item.BusinessNameAr + '</td>';
                        html1 += '<td>' + item.BusinessNameEn + '</td>';
                        html1 += '<td>' + item.EconomicDepartmentAR + '</td>';
                        html1 += '<td>' + item.EconomicDepartmentEN + '</td>';
                        html1 += '<td>' + item.EmirateAR + '</td>';
                        html1 += '<td>' + item.EmirateEN + '</td>';
                        html1 += '</tr>';

                    });

                    $.each(obj.objResponseParams.lstBusinessLicenses, function (key, item) {
                        html2 += '<tr>';
                        html2 += '<td>' + item.LicenseRegistrationDate + '</td>';
                        html2 += '<td>' + item.LicenseExpiryDate + '</td>';
                        html2 += '<td>' + item.LicenseStatusAR + '</td>';
                        html2 += '<td>' + item.LicenseStatusEN + '</td>';
                        html2 += '<td>' + item.LicenseFCRNumber + '</td>';
                        html2 += '</tr>';
                     });

                    $.each(obj.objResponseParams.lstOwnerPartnership, function (key, item) {

                        html3 += '<tr>';
                        html3 += '<td>' + item.OwnerPartnershipTypeAR + '</td>';
                        html3 += '<td>' + item.OwnerPartnershipTypeEN + '</td>';
                        html3 += '<td>' + item.OwnerSharePercentage + '</td>';
                        html3 += '</tr>';

                    });

                    $(".tbody").append(html);
                    $(".tbody1").append(html1);
                    $(".tbody2").append(html2);
                    $(".tbody3").append(html3);
                    $('.DataTable').show();
                }
                else {

                    if (obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

        $("#btnsubmit").on("click", getData);

        $('#create_pdf').on('click', function () {
            getPDF("MoEc.pdf");
       });

    </script>
}


