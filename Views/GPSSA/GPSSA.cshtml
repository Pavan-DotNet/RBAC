    <script>

        $(document).ready(function () {

            $('.DataTable').hide();
            $('.DataTable1').hide();
            $('.DataTable2').hide();
            $('.DataTable3').hide();
            $('.DataTable4').hide();

            $('#NationalId').hide();
            $('#SubmitTable').hide();

        });

        $("#querytype").change(function () {
            document.getElementById('response').innerText = '';
            document.getElementById('response').style.color = 'white';
            $('#txtEmiratesId').val('');

            var val = $("#querytype option:selected").val();

            if (val == '-1') {
                $('.DataTable').hide();
                $('.DataTable1').hide();
                $('.DataTable2').hide();
                $('.DataTable3').hide();
                $('.DataTable4').hide();

                $('#NationalId').hide();
                $('#SubmitTable').hide();
            }
            else if (val == '1') {
                $('.DataTable').hide();
                $('.DataTable1').hide();
                $('.DataTable2').hide();
                $('.DataTable3').hide();
                $('.DataTable4').hide();

                 $('#NationalId').show();
                $('#txtEmiratesId').show();
                $('#SubmitTable').show();
            }
            else if (val == '2') {
                $('.DataTable').hide();
                $('.DataTable1').hide();
                $('.DataTable2').hide();
                $('.DataTable3').hide();
                $('.DataTable4').hide();

                $('#NationalId').show();
                $('#txtEmiratesId').show();
                $('#SubmitTable').show();
            }


        });


         function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","GPSSA")';

            $(".tbody").empty();
            $('.DataTable').hide();
            $(".tbody1").empty();
            $('.DataTable1').hide();
            $(".tbody2").empty();
            $('.DataTable2').hide();
            $(".tbody3").empty();
            $('.DataTable3').hide();
             $(".tbody4").empty();
             $('.DataTable4').hide();
            document.getElementById('response').innerText = ('');
            var html = '';
             var html1 = '';
             var html2 = '';
             var html3 = '';
             var html4 = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if ($("#txtEmiratesId").val().length == 0 && $("#querytype option:selected").val() == "1") {

                document.getElementById('error').innerText = ('Invalid ID Type');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

           var input={"EmiratesID":  $('#txtEmiratesId').val()};
            var UsrAgent = { "UserAgent": $.browser };
            $.get(url, { stype: $("#querytype option:selected").val(),postdata: JSON.stringify(input), UserAgent: JSON.stringify(UsrAgent)  }, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1" && obj.stype == "1") {

                    $.each(obj.lstPerson, function (key, item) {

                        html += '<tr>';
                        html += '<td>' + item.emiratesId + '</td>';
                        html += '<td>' + item.name + '</td>';
                        html += '<td>' + item.dataOfBirth + '</td>';
                        html += '<td>' + item.customerSegment + '</td>';
                        html += '<td>' + item.customerType + '</td>';
                        html += '<td>' + item.pensionStatus + '</td>';
                        html += '<td>' + item.monthlyPension + '</td>';
                        html += '<td>' + item.pensionStartDate + '</td>';
                        html += '<td>' + item.stopPensionReason + '</td>';
                        html += '<td>' + item.lastDisbursementDate + '</td>';
                        html += '</tr>';
                    });


                    $(".tbody").append(html);
                    $('.DataTable').show();
                     $(".tbody1").append('');
                    $('.DataTable1').hide();
                     $(".tbody3").append('');
                    $('.DataTable3').hide();
                    $(".tbody2").append('');
                    $('.DataTable2').hide();
                }
                else if (obj.flag == "1" && obj.stype == "2") {
                    $.each(obj.lstPerson, function (key, item) {

                        html1 += '<tr>';
                        html1 += '<td>' + item.emiratesId + '</td>';
                        html1 += '<td>' + item.name + '</td>';
                        html1 += '<td>' + item.customerSegment + '</td>';
                        html1 += '<td>' + item.CustomerType + '</td>';
                        html1 += '<td>' + item.nationality + '</td>';
                        html1 += '<td>' + item.gender + '</td>';
                        html1 += '<td>' + item.dataOfBirth + '</td>';
                        html1 += '</tr>';

                        if (item.activeEmployment != null) {

                            html2 += '<tr>';
                            html2 += '<td>' + item.activeEmployment.employerName + '</td>';
                            html2 += '<td>' + item.activeEmployment.startDate + '</td>';
                            html2 += '<td>' + item.activeEmployment.jobTitle + '</td>';
                            html2 += '<td>' + item.activeEmployment.salary + '</td>';
                            html2 += '</tr>';
                        }

                        if (item.lastEmployment != null) {
                            html3 += '<tr>';
                            html3 += '<td>' + item.lastEmployment.employerName + '</td>';
                            html3 += '<td>' + item.lastEmployment.startDate + '</td>';
                            html3 += '<td>' + item.lastEmployment.endDate + '</td>';
                            html3 += '<td>' + item.lastEmployment.jobTitle + '</td>';
                            html3 += '<td>' + item.lastEmployment.salary + '</td>';
                            html3 += '<td>' + item.lastEmployment.eosBenefits + '</td>';
                            html3 += '</tr>';
                        }
                        if (item.totalServicePeriod != null) {
                            html4 += '<tr>';
                            html4 += '<td>' + item.totalServicePeriod.days + '</td>';
                            html4 += '<td>' + item.totalServicePeriod.months + '</td>';
                            html4 += '<td>' + item.totalServicePeriod.years + '</td>';
                            html4 += '</tr>';
                        }

                    });

                    $(".tbody4").append(html4);
                    $('.DataTable4').show();
                    $(".tbody3").append(html3);
                    $('.DataTable3').show();
                    $(".tbody2").append(html2);
                    $('.DataTable2').show();
                    $(".tbody1").append(html1);
                    $('.DataTable1').show();
                    $(".tbody").append('');
                    $('.DataTable').hide();
                }
                else {

                    if (obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.Message);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

