@section Scripts {

    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/Scripts/GeneratePDF.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>

    <script>



       $(document).ready(function () {

            $('.DataTable').hide();
             $('#Passport').hide();
             $('#NationalId').hide();
             $('#SubmitTable').hide();

        });

        $("#documentype").change(function () {

            $('#txtEmiratesId').val('');
            $('#txtPassportNo').val('');


            var val = $("#documentype option:selected").val();

            if (val == '-1') {
                $('#Passport').hide();
                $('#NationalId').hide();
                $(".tbody1").empty();
                $(".tbody2").empty();
                $(".tbody3").empty();
                $(".tbody4").empty();
                 $('.DataTable').hide();
                 $('#SubmitTable').hide();
            }
            else if (val == '2')
                {
                $('#Passport').hide();
                $('#NationalId').show();
                 $(".tbody1").empty();
                $(".tbody2").empty();
                $(".tbody3").empty();
                $(".tbody4").empty();
                 $('.DataTable').hide();
                $('#SubmitTable').show();
            }
            else if (val == '3')
            {
                $('#Passport').show();
                $('#NationalId').hide();
                 $(".tbody1").empty();
                $(".tbody2").empty();
                $(".tbody3").empty();
                $(".tbody4").empty();
                 $('.DataTable').hide();
                 $('#SubmitTable').show();
            }

        });

        function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","ADJD")';
            var id = $("#documentype option:selected").val();
         //   $(".tbody").empty();
            $(".tbody1").empty();
            $(".tbody2").empty();
            $(".tbody3").empty();
            $(".tbody4").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
            var html = '';
            var html1 = '';
            var html2 = '';
            var html3 = '';
            var html4 = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if (id == 2 && $("#txtEmiratesId").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid EmiratesId');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
            }
            else if (id == 3 && $("#txtPassportNo").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid passport number');
                document.getElementById('error').style.color = 'white';

                $("#txtPassportNo").focus();


                $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

            var input = { "EmiratesID": $('#txtEmiratesId').val(), "Passport": $('#txtPassportNo').val() };
            
            var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { index: id, postdata: JSON.stringify(input) , UserAgent: JSON.stringify(UsrAgent) }, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1") {


                    $.each(obj.objResponseParams.lstMarriageContractDetails, function (key, item) {

                        html1 += '<tr>';
                        html1 += '<td>' + item.ReferenceNumber + '</td>';
                        html1 += '<td>' + item.FolderNumber + '</td>';
                        html1 += '<td>' + item.FolderYear + '</td>';
                        html1 += '<td>' + item.ContractNumber + '</td>';
                        html1 += '<td>' + item.ContractDate + '</td>';
                    //    html += '</tr>';

                    //});

                    //$.each(obj.objResponseParams.lstMarriageContractDetails, function (key, item) {

                    //    html1 += '<tr>';
                        html1 += '<td>' + item.RegionDescriptionArabic + '</td>';
                        html1 += '<td>' + item.CourtNameDescriptionArabic + '</td>';
                        html1 += '<td>' + item.CityDescriptionArabic + '</td>';
                        html1 += '<td>' + item.MarriagePlaceDescriptionArabic + '</td>';
                        html1 += '</tr>';

                    });

                    $.each(obj.objResponseParams.lstPartyDetails, function (key, item) {
                        html2 += '<tr>';
                        html2 += '<td>' + item.FirstName + ' ' + item.SecondName + ' '+item.ThirdName + ' '+item.FourthName +' ' + item.FamilyName + + '</td>';
                        html2 += '<td>' + item.NameInEnglish + '</td>';
                        html2 += '<td>' + item.IDTypeDescriptionArabic + '</td>';
                        html2 += '<td>' + item.EmiratesID + '</td>';
                        html2 += '<td>' + item.DateOfBirth + '</td>';
                        html2 += '<td>' + item.GenderDescriptionArabic + '</td>';

                        html2 += '</tr>';
                     });

                    $.each(obj.objResponseParams.lstPartyDetails, function (key, item) {

                        html3 += '<tr>';
                        html3 += '<td>' + item.ReligionDescriptionArabic + '</td>';
                        html3 += '<td>' + item.PartyRoleDescriptionArabic + '</td>';
                        html3 += '<td>' + item.EmailAddress + '</td>';
                        html3 += '<td>' + item.Telephone + '</td>';
                        html3 += '<td>' + item.PlaceOfBirth + '</td>';
                        html3 += '<td>' + item.PlaceOfResidence + '</td>';

                        html3 += '</tr>';

                    });
                     $.each(obj.objResponseParams.lstPartyDetails, function (key, item) {

                         html4 += '<tr>';
                        html4 += '<td>' + item.RegionDescriptionArabic + '</td>';
                        html4 += '<td>' + item.CityDescriptionArabic + '</td>';
                        html4 += '<td>' + item.CountryDescriptionArabic + '</td>';
                        html4 += '<td>' + item.NationalityDescriptionArabic + '</td>';
                        html4 += '<td>' + item.QualificationDescriptionArabic + '</td>';
                        html4 += '<td>' + item.ProfessionDescription + '</td>';
                        html4 += '</tr>';

                    });

                   // $(".tbody").append(html);
                    $(".tbody1").append(html1);
                    $(".tbody2").append(html2);
                    $(".tbody3").append(html3);
                    $(".tbody4").append(html4);
                    $('.DataTable').show();
                }
                else {

                    if (obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

        $("#btnsubmit").on("click", getData);

        $('#create_pdf').on('click', function () {
            getPDF("ADJD.pdf");
       });

    </script>
}


