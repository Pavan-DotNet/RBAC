@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/Scripts/GeneratePDF.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>
    <script>

        $(document).ready(function () {

            $('.DataTable').hide();
            $('.DataTable1').hide();

             $('#IDType').hide();
            $('#SubmitTable').hide();
            getAllData();

        });

        $("#documentype").change(function () {

            $('#txtIDType').val('');
            $('#txtName').val('');

            var val = $("#documentype option:selected").val();

            if (val == '-1') {
                $('#IDType').hide();
                $(".tbody").empty();
                $('#SubmitTable').hide();
            }
            else {
                 $('#IDType').show();
                $('#SubmitTable').show();
            }


        });
                function getAllData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("GetAllData", "SHJPRISON")';

            $(".tbody").empty();
            $("#divTables").empty();
                    $('.DataTable1').hide();

            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');


            $('#error').fadeIn();
            $('#response').fadeIn();


            var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { UserAgent: JSON.stringify(UsrAgent) }, function (data) {

                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }
                data = data.replace(/\:null/gi, "\:\"\"");
                var obj = JSON.parse(data);

                var html=''
                if (obj.flag == "1") {
                    if (obj.response != null) {
                        for (var i = 0; i < obj.response.length; i++) {

                            html += '<tr>';
                            html += '<td><a href="javascript:getReferenceData(' + obj.response[i].TransactionId + ');">' + obj.response[i].TransactionId + '</a></td>';
                            html += '<td>' + obj.response[i].EmiratesId + '</td>';
                            html += '<td>' + obj.response[i].InMateName + '</td>';
                            html += '<td>' + obj.response[i].InsertDate + '</td>';


                        }

                        $(".tbody1").append(html);
                        $('.DataTable1').show();
                    }

                }
                else {

                    if (obj.flag == "2") {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

        function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","SHJPRISON")';
            var id = $("#documentype option:selected").val();
            $(".tbody").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
            var html = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if ($("#txtIDType").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid ID Type');
                document.getElementById('error').style.color = 'white';

                $("#txtIDType").focus();


                 $("#divLoading").html("");

                return false;
            }
            else if ($("#txtName").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid passport number');
                document.getElementById('error').style.color = 'white';

                $("#txtName").focus();


                $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

            var input = { "IDType": $("#documentype option:selected").val(), "IDNumber": $('#txtIDType').val(), "InmateDetails": { "InmateName": $('#txtName').val() }, "ChannelType": "web" };
            var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { index: id, postdata: JSON.stringify(input), UserAgent: JSON.stringify(UsrAgent)  }, function (data) {

                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1") {

                    swal("!Good Job", obj.RequestData.ResponseAR, "success")

                }
                else {
                    document.getElementById('response').innerText = (obj.Message);
                    document.getElementById('response').style.color = 'white';
                }
                $("#divLoading").html("");
            });
        }

        function getReferenceData(referenceId) {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("LoadDataByRefId", "SHJPRISON")';

            $(".tbody").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
            var html = '';

            $('#error').fadeIn();
            $('#response').fadeIn();

            var UsrAgent = { "UserAgent": $.browser };

                    $.get(url, { ReferenceId: referenceId, UserAgent: JSON.stringify(UsrAgent)  }, function (data) {

                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                        if (obj.flag == "1") {

                            html += '<tr>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.ReferenceNumber) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.IDNumber) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.InmateName) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.DateOfBirth) + '</td>';

                            if (obj.RequestStatus.Data.Status == '14')
                                html += '<td>' + "Ongoing" + '</td>';
                            else if (obj.RequestStatus.Data.Status == '2')
                                html += '<td>' + "Rejected" + '</td>';
                            else if (obj.RequestStatus.Data.Status == '11')
                                html += '<td>' + "Completed" + '</td>';
                            else
                                html += '<td>' + obj.RequestStatus.Data.Status + '</td>';



                            html += '<td>' + StringHasValue(obj.RequestStatus.Data.ReasonforRejection) + '</td>';

                             if (obj.RequestStatus.Data.InmateStatusType == '0')
                                html += '<td>' + "Not Defined" + '</td>';
                            else if (obj.RequestStatus.Data.InmateStatusType == '1')
                                html += '<td>' + "Still In Jail" + '</td>';
                            else if (obj.RequestStatus.Data.InmateStatusType == '2')
                                html += '<td>' + "Released from Jail" + '</td>';
                            else if (obj.RequestStatus.Data.InmateStatusType == '3')
                                html += '<td>' + "Transferred to another Jail" + '</td>';
                             else
                                html += '<td>' + obj.RequestStatus.Data.InmateStatusType + '</td>';



                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.DateofEntry) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.ExpectedReleaseDate) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.ReleasedDate) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.TransferredDate) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.TransferredTo) + '</td>';
                            html += '<td>' +  StringHasValue(obj.RequestStatus.Data.ReasonForTransfer) + '</td>';
                            html += '</tr>';

                    $(".tbody").append(html);
                    $('.DataTable').show();
                }
                else {

                    document.getElementById('response').innerText = (obj.Message);
                    document.getElementById('response').style.color = 'white';
                }
                $("#divLoading").html("");
            });
        }

        var StringHasValue = function (strValue) {
            if ($.trim(strValue) != "" && $.trim(strValue) != null && $.trim(strValue) != undefined)
                return strValue;
            else
                return "-";
        };
       $("#btnsubmit").on("click", getData);

        $('#create_pdf').on('click', function () {
            getPDF("SHARJAHPRISON.pdf");
       });
    </script>
}
