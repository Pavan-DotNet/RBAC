    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>

    <script>



        $(document).ready(function () {

            $('.DataTable').hide();

        });


         function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","SHJDH")';

             $(".tbody").empty();
             $(".tbody1").empty();

            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
             var html = '';
             var html1 = '';

            $('#error').fadeIn();
            $('#response').fadeIn();
            if ($("#txtEmiratesId").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid ID Type');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

           var input={"EmiratesID":  $('#txtEmiratesId').val() };
           var UsrAgent = { "UserAgent": $.browser };
            $.get(url, { postdata: JSON.stringify(input), UserAgent: JSON.stringify(UsrAgent)  }, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

               // var obj = JSON.parse("\{\"success\":true,\"data\":{\"id\":40425,\"requestName\":\"-\",\"emiratesId\":\"784198373804271\",\"issueDate\":\"31/08/2022\",\"notes\":null,\"personName\":\"فاطمة أحمد علي سعيد الحمودي\",\"eid\":\"784-1983-7380427-1\",\"familyNo\":\"6645\",\"townNo\":\"305\",\"emiratesName\":\"الشارقة\",\"cityName\":\"خورفكان\",\"regionName\":\"اللؤلؤية\",\"mobile\":\"+971502407155\",\"finalAmount\":\"25000.0000\",\"endDate\":\"01/09/2022\"}}");
                var obj = JSON.parse(data);
                if (obj.flag == "1") {
                    html += '<tr>';
                    html += '<td>' + StringHasValue(obj.objresp.data.id) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.requestName) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.requestIdentityNo) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.issueDate) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.notes) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.personName) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.eid) + '</td>';
                    html += '<td>' + StringHasValue(obj.objresp.data.familyNo) + '</td>';
                    html += '</tr>';

                    html1 += '<tr>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.townNo) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.cityName) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.emiratesName) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.regionName) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.mobile) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.finalAmount) + '</td>';
                    html1 += '<td>' + StringHasValue(obj.objresp.data.endDate) + '</td>';
                    html1 += '</tr>';
                    html1 += '<tr>';


                    $(".tbody").append(html);

                     $(".tbody1").append(html1);
                    $('.DataTable').show();
                }
                else {

                     if(obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if (obj.flag == "3") {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

        $("#btnsubmit").on("click", getData);

        $('#create_pdf').on('click', function () {
            getPDF("SHJDH.pdf");
       });
        var StringHasValue = function (strValue) {
            if ($.trim(strValue) != "" && $.trim(strValue) != null && $.trim(strValue) != undefined)
                return strValue;
            else
                return "-";
        };

