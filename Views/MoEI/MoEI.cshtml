    <script src="~/Scripts/GeneratePDF.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-browser/0.1.0/jquery.browser.min.js"></script>


    <script>



        $(document).ready(function () {

            $('.DataTable').hide();
            $('#NationalId').hide();
            $('#FamilyBookNo').hide();
            $('#SubmitTable').hide();

        });

        $("#documentype").change(function () {

            $('#txtEmiratesId').val('');
            $('#txtTNo').val('');
            $('#txtFNo').val('');
            $('.DataTable').hide();

            var val = $("#documentype option:selected").val();

            if (val == '-1') {
                 $('#FamilyBookNo').hide();
             $('#NationalId').hide();
                $(".tbody").empty();
                $(".tbody1").empty();
                $(".tbody2").empty();
                 $('#SubmitTable').hide();
            }
            else if (val == '2')
                {
             $('#NationalId').show();
                $('#FamilyBookNo').hide();
                $('#SubmitTable').show();
            }
            else if (val == '3')
            {
                $('#FamilyBookNo').show();
             $('#NationalId').hide();
                 $('#SubmitTable').show();
            }

        });

         function getData() {

            $("#divLoading").html('<image src="../Content/images/ajax-loader.gif" alt="Loading, please wait" />');

            var url = '@Url.Action("Search","MoEI")';
            var id = $("#documentype option:selected").val();
             $(".tbody").empty();
             $(".tbody1").empty();
             $(".tbody2").empty();
             $(".tbody3").empty();
            $('.DataTable').hide();
            document.getElementById('response').innerText = ('');
             var html = '', html1 = '', html2 = '', html3 = '' ;

            $('#error').fadeIn();
            $('#response').fadeIn();
            if (id == 2 && $("#txtEmiratesId").val().length == 0) {

                document.getElementById('error').innerText = ('Invalid ID Type');
                document.getElementById('error').style.color = 'white';

                $("#txtEmiratesId").focus();


                 $("#divLoading").html("");

                return false;
             }
            else if (id == 3 && $("#txtTNo").val().length == 0 && $("#txtFNo").val().length == 0) {

                document.getElementById('error').innerText = ('Town Number is mandatory');
                document.getElementById('error').style.color = 'white';

                $("#txtTNo").focus();


                $("#divLoading").html("");

                return false;
            }
            else if (id == 3 && $("#txtFNo").val().length == 0) {

                document.getElementById('error').innerText = ('Family Number is mandatory');
                document.getElementById('error').style.color = 'white';

                $("#txtFNo").focus();


                $("#divLoading").html("");

                return false;
            }
            else {
                document.getElementById('error').innerText = ('');
            }

             var input = { "EmiratesID": $('#txtEmiratesId').val(), "TNo": $("#txtTNo").val(), "FNo": $('#txtFNo').val() };
             var UsrAgent = { "UserAgent": $.browser };

            $.get(url, { index: id, postdata: JSON.stringify(input), UserAgent: JSON.stringify(UsrAgent) }, function (data) {
                if (data == '') {
                    $("#divLoading").html("");
                    return;
                }

                var obj = JSON.parse(data);
                if (obj.flag == "1") {

                    $.each(obj.lstResponse, function (key, item) {

                        html += '<tr>';
                        html += '<td>' + item.NameAra + '</td>';
                        html += '<td>' + item.Emirate + '</td>';
                        html += '<td>' + item.Email + '</td>';
                        html += '<td>' + item.TotalSalary + '</td>';
                        html += '<td>' + item.ReqUseOfAid + '</td>';
                        html += '<td>' + item.DecreeDate + '</td>';
                        html += '<td>' + item.ApplicationDate + '</td>';
                        html += '</tr>';
                        html1 += '<tr>';
                        html1 += '<td>' + item.BirthDate + '</td>';
                        html1 += '<td>' + item.Employer + '</td>';
                        html1 += '<td>' + item.HouseOwnNameAra + '</td>';
                        html1 += '<td>' + item.ApplicationStateNameAra + '</td>';
                        html1 += '<td>' + item.FileDate + '</td>';
                        html1 += '<td>' + item.AssistantStateNameAra + '</td>';
                        html1 += '<td>' + item.Amount + '</td>';
                        html1 += '</tr>';
                        html2 += '<tr>';
                        html2 += '<td>' + item.ApplicationNo + '</td>';
                        html2 += '<td>' + item.Mobileno + '</td>';
                        html2 += '<td>' + item.DecreeSubTypeNameAra + '</td>';
                        html2 += '<td>' + item.ReqAidType + '</td>';
                        html2 += '<td>' + item.HLCEast + '</td>';
                        html2 += '<td>' + item.HLCNorth + '</td>';
                        html2 += '<td>' + item.EmirateIdCardNo + '</td>';
                        html2 += '</tr>';
                        html3 += '<tr>';
                        html3 += '<td>' + item.RegionName + '</td>';
                        html3 += '<td>' + item.HasLand + '</td>';
                        html3 += '</tr>';


                    });

                    $(".tbody").append(html);
                    $(".tbody1").append(html1);
                    $(".tbody2").append(html2);
                    $(".tbody3").append(html3);
                    $('.DataTable').show();
                }
                else {

                    if (obj.flag == "2"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }
                    else if(obj.flag == "3"  ) {
                        document.getElementById('response').innerText = (obj.ResponseDescription);
                        document.getElementById('response').style.color = 'white';
                    }

                }
                $("#divLoading").html("");
            });
        }

        $("#btnsubmit").on("click", getData);


          $('#create_pdf').on('click', function () {
            getPDF("MoEI.pdf");
       });


    </script>
